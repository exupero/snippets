global !p
def big_header(snip):
	text = snip.buffer[snip.line].strip().upper()
	c = '#'*len(text)

	snip.buffer[snip.line] = ''
	snip.expand_anon(f'##{c}\n# {text}\n##{c}')
endglobal
post_jump "big_header(snip)"
snippet 'header (.+)' "Add header comment" br
`!p snip.rv = match.group(1)`
endsnippet

